@model Anime

@{
    ViewBag.Title = @Model.Title;
}

<div class="row justify-content-between margin-top-details">
    <div class="col-md-4">
        <img class="img-thumbnail" alt="@Model.Title"
            src="data:image/*;base64, @(Convert.ToBase64String(Model.Poster))"
    </div>
</div>
    <div class="col-md-7">
        <div class="d-flex justify-content-between mb-3">
            <h3>@Model.Title</h3>
            <span class="mt-2">
                <i class="bi bi-star-fill text-warning"></i>
                <span class="text-muted">@Model.Rate.ToString("0.0")</span>
            </span>
        </div>
        <span class="text-muted mr-3">
            <i class="bi bi-calendar-week"></i>
            @Model.Year
        </span>
        <span class="text-muted">
            <i class="bi bi-film"></i>
            @Model.Category.Name
        </span>
        <p class="text-justify mt-3">@Model.StoreLine</p>
    </div>
