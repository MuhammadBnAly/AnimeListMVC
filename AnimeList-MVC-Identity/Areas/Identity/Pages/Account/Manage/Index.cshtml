@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<link href="~/css/site.css" rel="stylesheet" />
<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>*@
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
            <button id="update-profile-button" asp-action="Index" type="submit" class="btn btn-outline-secondary">Cancel</button>
            
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Input.ProfilePicture" class="w-100"></label>
                    @if (Model.Input.ProfilePicture != null)
                    {
                        <img id="profile-picture" class="profile-picture-class img-thumbnail" alt="ProfilePicture" 
                            src="data:image/*;base64, @(Convert.ToBase64String(Model.Input.ProfilePicture))" />
                    }
                    else
                    {
                        <img id="profile-picture" class="profile-picture-class img-thumbnail" alt="ProfilePicture" 
                            src="~/images/user-2.png" />
                    }
                    <div class="custom-file mt-2">
                        <input type="file" accept="image/*"
                            asp-for="Input.ProfilePicture"
                            onchange="document.getElementById('profile-picture').src = window.URL.createObjectURL(this.files[0])"
                            class="custom-file-input profile-picture-class" />
                        <label class="custom-file-label" asp-for="Input.ProfilePicture" >
                            Choose Picture...
                        </label>
                    </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}